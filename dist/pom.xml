<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>MagicSpells-parent</artifactId>
        <groupId>com.nisovin.magicspells</groupId>
        <version>parent</version>
        <relativePath>../</relativePath>
    </parent>
    <modelVersion>4.0.0</modelVersion>
    <groupId>MagicSpells-dist</groupId>
    <artifactId>MagicSpells-dist</artifactId>
    <version>parent</version>
    <name>MagicSpells-dist</name>
    <dependencies>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells</artifactId>
            <version>${revision}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-factions</artifactId>
            <version>1.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-shop</artifactId>
            <version>1.6</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-memory</artifactId>
            <version>1.2</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-v1_8_R1</artifactId>
            <version>v1_8_R1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-v1_8_R3</artifactId>
            <version>v1_8_R3</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-v1_9_R1</artifactId>
            <version>v1_9_R1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-v1_9_R2</artifactId>
            <version>v1_9_R2</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-v1_10_R1</artifactId>
            <version>v1_10_R1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-v1_11_R1</artifactId>
            <version>v1_11_R1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-v1_12_R1</artifactId>
            <version>v1_12_R1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-v1_13_R1</artifactId>
            <version>v1_13_R1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.nisovin.magicspells</groupId>
            <artifactId>MagicSpells-v1_13_R2</artifactId>
            <version>v1_13_R2</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <finalName>MagicSpells</finalName>
        <directory>../target</directory>
        <sourceDirectory>./src/main/java</sourceDirectory>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.1.0</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <artifactSet>
                                <includes>
                                    <include>com.nisovin.magicspells:MagicSpells</include>
                                    <include>com.nisovin.magicspells:MagicSpells-*</include>
                                </includes>
                                <excludes>
                                    <exclude>com.nisovin.magicspells:MagicSpells-factions</exclude>
                                    <exclude>com.nisovin.magicspells:MagicSpells-memory</exclude>
                                    <exclude>com.nisovin.magicspells:MagicSpells-shop</exclude>
                                    <exclude>com.nisovin.magicspells:MagicSpells-teams</exclude>
                                    <exclude>com.nisovin.magicspells:MagicSpells-towny</exclude>
                                </excludes>
                            </artifactSet>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>